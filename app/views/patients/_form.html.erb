<%= form_with(model: patient, local: true) do |form| %>
  <% if patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :fname %>
    <%= form.text_field :fname, id: :patient_fname %>
  </div>

  <div class="field">
    <%= form.label :lname %>
    <%= form.text_field :lname, id: :patient_lname %>
  </div>

  <div class="field">
    <%= form.label :reason %>
    <%= form.text_field :reason, id: :patient_reason %>
  </div>

  <div class="field">
    <%= form.label :room_num %>
    <%= form.number_field :room_num, id: :patient_room_num %>
  </div>

  <div class="field">
    <%= form.label :hospital_id %>
    <%= form.number_field :hospital_id, id: :patient_hospital_id %>
  </div>

  <div class="field">
    <%= form.label :entry %>
    <%= form.datetime_select :entry, id: :patient_entry %>
  </div>

  <div class="field">
    <%= form.label :exit %>
    <%= form.datetime_select :exit, id: :patient_exit %>
  </div>

  <div class="field">
    <%= form.label :medications %>
    <%= form.text_field :medications, id: :patient_medications %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
